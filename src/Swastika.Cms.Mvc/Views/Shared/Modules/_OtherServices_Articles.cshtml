@model Swastika.IO.Cms.Lib.ViewModels.ModuleWithDataViewModel

@if (Model != null && Model.Data.TotalItems > 0)
{
    <section id="feature">
        <div class="container">
            <div class="center wow fadeInDown">
                <h2>@Model.Title</h2>
                <p class="lead">@Model.Description</p>
            </div>
            <div class="row">
                <div class="features">
                    @foreach (var article in Model.Articles.Items)
                    {
                        <a asp-action="ArticleDetails" asp-route-id="@article.Id" asp-route-SeoTitle="@article.SeoTitle">
                            <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                                <div class="feature-wrap">
                                    <i class="@article.Icon"></i>
                                    <h2>@article.Title</h2>
                                    <h3>@article.Excerpt</h3>
                                </div>
                            </div>
                            <!--/.col-md-4-->
                        </a>
                    }
                </div
            </div>
        </div>
        <!--/.container-->
    </section>
    <!--/#services-->
}




