@model Swastika.IO.Cms.Lib.ViewModels.ModuleWithDataViewModel

@if (Model != null && Model.Articles.TotalItems > 0)
{

    <section id="recent-works">
        <div class="container">
            <div class="center wow fadeInDown">
                <h2>@Model.Title</h2>
                <p class="lead">@Model.Description</p>
            </div>
            <div class="row">
                @foreach (var article in Model.Articles.Items)
                {
                    <a asp-action="ArticleDetails" asp-route-id="@article.Id" asp-route-SeoTitle="@article.SeoName">
                    <div class="col-md-4 col-sm-6 wow fadeInDown animated">
                            <div class="feature-wrap">
                                <img alt="@article.SeoTitle" src="@article.Thumbnail">
                                <h2>@article.Title</h2>
                                <h3>@article.Excerpt</h3>
                            </div>
                    </div>
                    </a>
                }

            </div>
            <!--/.row-->
        </div>
        <!--/.container-->
    </section><!--/#recent-works-->
}






















