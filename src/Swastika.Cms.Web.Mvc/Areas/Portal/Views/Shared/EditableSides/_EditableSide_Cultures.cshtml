@model List<Swastika.Domain.Core.Models.SupportedCulture>
<div class="card">
    <div class="card-header">
        Languages
    </div>
    <div class="card-body">
        <div class="form-group">
            @for (int i = 0; i < Model.Count; i++)
    {

        <span class="switch">
            <input type="hidden" asp-for="@Model[i].Specificulture" />
            <input type="checkbox" asp-for="@Model[i].IsSupported" class="switch" required="">
            <label class="switch" asp-for="@Model[i].IsSupported">
                <i class="flag-icon h5 @Model[i].Icon" style="margin-right: 5px;margin-left: 10px;"></i> @Model[i].Specificulture
            </label>
        </span>
}
        </div>
    </div>
</div>


