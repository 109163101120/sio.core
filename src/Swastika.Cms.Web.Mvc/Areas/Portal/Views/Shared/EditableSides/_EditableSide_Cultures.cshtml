@model List<Swastika.Domain.Core.Models.SupportedCulture>
<div class="card">
    <div class="card-header">
        Languages
    </div>
    <div class="card-body">

        @for (int i = 0; i < Model.Count; i++)
        {


            <div class="custom-control custom-checkbox">
                <input type="checkbox" asp-for="@Model[i].IsSupported" class="custom-control-input" required="" 
                       id="ListSupportedCulture_@Model[i].Specificulture">
                <input type="hidden" asp-for="@Model[i].Specificulture" />
                <label class="custom-control-label" for="ListSupportedCulture_@Model[i].Specificulture">
                    <i class="flag-icon h5 @Model[i].Icon" style="margin-right: 5px;margin-left: 10px;"></i> @Model[i].Specificulture
                </label>
            </div>

        }



    </div>
</div>