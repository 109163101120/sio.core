@model PaginationModel<InfoThemeViewModel>
@{
    ViewData["Title"] = "Template";
    //Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";
    int fromValue = Model.PageIndex * @Model.PageSize + 1;
    int toValue = fromValue + Model.PageSize - 1;
    int prevPage = Model.PageIndex > 0 ? Model.PageIndex - 1 : 0;
    int nextPage = Model.PageIndex == Model.TotalPage - 1 ? Model.PageIndex : Model.PageIndex + 1;
    toValue = toValue > Model.TotalItems ? Model.TotalItems : toValue;
    string href = string.Format("{0}://{1}{2}", Context.Request.Scheme, Context.Request.Host, Url.Action());

}

<div class="box-body">
   
    <table class="table table-hover table-striped dataTable">
        <thead>
            <tr>
                <th>
                    Priority
                </th>
                <th>
                    Name
                </th>
                <th>
                    CreatedDate
                </th>

                <th>
                    CreatedBy
                </th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
             <tr>
                <th>
                    Priority
                </th>
                <th>
                    Name
                </th>
                <th>
                    CreatedDate
                </th>

                <th>
                    CreatedBy
                </th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        
                        <a asp-controller="Template" asp-action="Index" asp-route-folder="Layouts" asp-route-templateId="@item.Id" 
                               class="link">
                            @Html.Raw(item.Name)
                        </a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>

                    <td>
                        <div class="btn-block">
                            <a asp-controller="Theme" asp-action="Edit" asp-route-id="@item.Id" 
                               class="btn btn-sm btn-warning d-inline-block "><i class="fa fa-pencil"></i></a>
                            <a asp-area="Portal" asp-controller="Theme" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger d-inline-block" data-popout="true" data-toggle="confirmation" data-singleton="true"><i class="fa fa-remove"></i></a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>

        <tbody></tbody>
    </table>
    @await Html.PartialAsync("_Pagination", Model
                    , new ViewDataDictionary(this.Vi‌​ewData)
                    {
{ "PageSize", Model.PageSize}, { "PageIndex", Model.PageIndex }, { "TotalPage", Model.TotalPage } })
</div>
