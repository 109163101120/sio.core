@model Swastika.Cms.Lib.ViewModels.FrontEnd.FEArticleViewModel
@{
    ViewData["Title"] = Model.SeoTitle;
    ViewData["SeoTitle"] = Model.SeoTitle;
    ViewData["SeoKeywords"] = Model.SeoKeywords;
    ViewData["SeoDescription"] = Model.SeoDescription;
    string culture = ViewBag.culture;
    Layout = string.Format("Templates/{0}/Layouts/_Layout",
        Swastika.Cms.Lib.Services.ApplicationConfigService.Instance.GetLocalString(Swastika.Cms.Lib.SWCmsConstants.ConfigurationKeyword.Theme, culture, "Default"));
}

@if (!string.IsNullOrEmpty(Model.TemplatePath))
{
    try
    {
        @Html.Partial(Model.TemplatePath, Model)
    }
    catch (Exception ex)
    {
        <p class="text-center text-danger">
            Unable to load Template
        </p>
        <p>
            @ex.StackTrace
        </p>

    }
}
else
{
    <section id="blog" class="container">
        <h1>Please choose template</h1>
    </section>
}

