@model Swastika.Cms.Lib.ViewModels.FrontEnd.FEArticleViewModel

@if (Model != null)
{
    <section id="blog" class="container">
        <div class="center">
            <h2>@Model.Title</h2>
            <p class="lead">@Model.Excerpt</p>
        </div>

        <div class="blog">
            <div class="row">
                <div class="col-md-12">
                    <div class="blog-item">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img class="img-responsive img-blog" src="@Model.Image" alt="" />
                        }
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 blog-content" style="text-align: justify;">
                                @Html.Raw(Model.Content)

                            </div>
                        </div>
                    </div><!--/.blog-item-->

                    @foreach (var childModule in Model.Modules)
                    {
                        Html.RenderPartial(childModule.Module.Template, childModule.Module);
                    }

                    @Html.Partial("../Widgets/_Comments_Facebook.cshtml")
                </div><!--/.col-md-8-->
                <!--aside class="col-md-4">

                    @await Html.PartialAsync("../Widgets/_Tags.cshtml", Model
                , new ViewDataDictionary(this.Vi‌​ewData)
                {
                    { "Tags", Model.Tags} })
                </aside-->

            </div><!--/.row-->


        </div><!--/.blog-->

    </section>


}
