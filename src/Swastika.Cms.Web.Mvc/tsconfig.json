{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "exclude": [
    "wwwroot/lib",
    "node_modules/*",
    "assets/plugins/*",
    "/*.d.ts"

  ], //ignore lib folders, we will get IntelliSense via ATA
  "typeAcquisition": {
    "enable": true,
    //"include": [ "kendo-ui" ] //kendo-ui wasn't added via bower, so we need to list it here
  }
}