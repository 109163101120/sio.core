@{
    ViewData["Title"] = "Home Page";
    Layout = "_SpaLayout";
    bool isFront = Context.Request.Path.ToString().IndexOf("/portal") != -1 ? false : true;
}
@section styles {
    @if(isFront)
    {
        <!--     Fonts and icons     -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
        <!-- CSS Files -->
        <link href="~/sw-content/themes/front/now-ui-kit-pro-v1.1.0/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/sw-content/themes/front/now-ui-kit-pro-v1.1.0/css/now-ui-kit.css?v=1.1.0" rel="stylesheet" />
        <!-- CSS Just for demo purpose, don't include it in your project -->
        <link href="~/sw-content/themes/front/now-ui-kit-pro-v1.1.0/css/demo.css" rel="stylesheet" />
    }
    else // CSS for SPA Portal
    {
        <link href="~/sw-content/themes/portal/swastika-io-admin-v0.0.1/css/portal.css?v=0.0.1" rel="stylesheet" />
        <link href="~/sw-content/themes/portal/swastika-io-admin-v0.0.1/font/css/open-iconic-bootstrap.min.css?v=0.0.1" rel="stylesheet" />
    }
}

<app asp-prerender-module="ClientApp/dist/main-server">Loading...</app>
<script src="~/sw-spa/dist/vendor.js" asp-append-version="true"></script>


